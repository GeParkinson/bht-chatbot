rule "Test Rule"
    dialect "java"
    when
        m : BotMessage( intent == "Test")
    then
        modify ( m ) { setAnswer("Test successful" )};
end

rule "Show all meals"
    dialect "java"
    when
        m : BotMessage( intent == "show_meals")
    then
        modify ( m ) { setAnswer("Heute gibt es folgende Gerichte: \n" )};
end